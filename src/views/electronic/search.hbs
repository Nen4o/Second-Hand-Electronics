<section class="search">
    <h1>Search</h1>

    <form class="search-form" method="GET">
        <input type="text" class="search-name" value="{{query.name}}" name="name" placeholder="Search Name...">
        <input type="text" class="search-type" value="{{query.type}}" name="type" placeholder="Search Type...">
        <button type="submit" class="btn-search">Search</button>
    </form>

    <!--If there are matches after search-->
    <div class="search-result">
        <div class="search-list">
            {{#each electronics}}
            {{> electronicCard}}
            {{else }}
            <div class="no-match">
                <p>No match was found!</p>
            </div>
            {{/each}}
        </div>

    </div>
    <!--If there are no matches-->
    <!--  -->
</section>